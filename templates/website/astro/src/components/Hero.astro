---
interface Props {
  href: string;
  arialLabel: string;
}

const { href, arialLabel } = Astro.props;
---

<a
  {href}
  rel="noreferrer noopener"
  target="_blank"
  aria-label={arialLabel}
  class="col-span-2 text-center text-lg font-extrabold bg-lavender-blue-500 text-white py-3 px-4 border-black border-[3px] rounded transition-all shadow-[8px_8px_0px_rgba(0,0,0,1)] hover:bg-lavender-blue-400 active:bg-lavender-blue-600 active:shadow-none active:translate-x-[8px] active:translate-y-[8px]"
>
  <slot />
</a>
